{
  "name": "config-gen",
  "version": "2.0.0-alpha.2",
  "description": "CLI to generate js/json configuration files for various packages",
  "keywords": [
    "config gen",
    "config create",
    "create configs",
    "configs",
    "configurations",
    "config creator"
  ],
  "author": {
    "name": "Christopher Szatmary",
    "email": "cs@christopherszatmary.com",
    "url": "https://christopherszatmary.com"
  },
  "repository": "cszatma/config-gen",
  "bugs": {
    "url": "https://github.com/cszatma/config-gen/issues"
  },
  "license": "MIT",
  "main": "build/index.js",
  "bin": {
    "config-gen": "build/index.js"
  },
  "files": [
    "build/"
  ],
  "engines": {
    "node": ">= 10"
  },
  "dependencies": {
    "@cszatma/node-stdlib": "^0.1.0",
    "chalk": "^3.0.0",
    "commander": "^5.0.0",
    "fs-extra": "^9.0.0",
    "inquirer": "^7.1.0",
    "js-yaml": "^3.13.1",
    "semver": "^7.1.3",
    "stringify-object": "^3.3.0"
  },
  "devDependencies": {
    "@cszatma/eslint-config": "^0.5.0",
    "@types/fs-extra": "^8.1.0",
    "@types/inquirer": "^6.5.0",
    "@types/jest": "^25.1.4",
    "@types/js-yaml": "^3.12.3",
    "@types/semver": "^7.1.0",
    "@types/stringify-object": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.2.4",
    "lint-staged": "^10.1.1",
    "prettier": "^2.0.2",
    "ts-jest": "^25.3.0",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf build && rm -rf coverage",
    "config-gen": "NODE_ENV=dev node build/index.js",
    "fmt": "prettier --write '{src,tests}/**/*.{js,ts}'",
    "lint": "eslint --ext=js,ts .",
    "lint:fix": "eslint --fix --ext=js,ts .",
    "prepublishOnly": "yarn clean && yarn build && yarn verify",
    "test": "NODE_ENV=test jest --coverage",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:ci": "NODE_ENV=test jest --coverage --runInBand --colors",
    "ts-config-gen": "NODE_ENV=dev ts-node src/index.ts",
    "verify": "yarn lint && yarn check-types && yarn test",
    "watch": "tsc -p ./tsconfig.build.json -w"
  },
  "eslintConfig": {
    "extends": [
      "@cszatma"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "trailingComma": "all"
  }
}
