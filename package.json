{
  "name": "config-gen",
  "version": "1.1.0",
  "description": "CLI to generate js/json configuration files for various packages",
  "keywords": [
    "config gen",
    "config create",
    "create configs",
    "configs",
    "configurations",
    "config creator"
  ],
  "author": {
    "name": "Christopher Szatmary",
    "email": "cs@christopherszatmary.com",
    "url": "https://christopherszatmary.com"
  },
  "repository": "cszatma/config-gen",
  "bugs": {
    "url": "https://github.com/cszatma/config-gen/issues"
  },
  "license": "MIT",
  "main": "build/index.js",
  "bin": {
    "config-gen": "build/index.js"
  },
  "files": [
    "build/"
  ],
  "engines": {
    "node": ">=6"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "commander": "^2.20.0",
    "fs-extra": "^7.0.1",
    "inquirer": "^6.3.1",
    "js-yaml": "^3.13.1",
    "semver": "^6.0.0",
    "stringify-object": "^3.3.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.5",
    "@types/inquirer": "^6.0.1",
    "@types/jest": "^24.0.11",
    "@types/js-yaml": "^3.12.1",
    "@types/semver": "^6.0.0",
    "@types/stringify-object": "^3.2.0",
    "husky": "^2.0.0",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.4.5"
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json",
    "clean": "rm -rf build/",
    "config-gen": "node build/index.js",
    "format": "prettier --write \"./**/*.{ts,js,json}\"",
    "lint": "tslint -p ./tsconfig.json --fix",
    "prepare": "yarn run clean && yarn run build",
    "test": "jest",
    "test-watch": "jest --watch",
    "ts-config-gen": "ts-node src/index.ts",
    "watch": "tsc -p ./tsconfig.build.json -w"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "lint-staged": {
    "*.ts": [
      "tslint -p ./tsconfig.json --fix",
      "git add"
    ],
    "*.{js,json}": [
      "prettier --write",
      "git add"
    ],
    "yarn.lock": [
      "git rm --cached"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
