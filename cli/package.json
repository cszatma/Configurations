{
  "name": "config-gen",
  "version": "1.1.0",
  "description": "CLI to generate js/json configuration files for various packages",
  "keywords": [
    "config gen",
    "config create",
    "create configs",
    "configs",
    "configurations",
    "config creator"
  ],
  "author": {
    "name": "Christopher Szatmary",
    "email": "cs@christopherszatmary.com",
    "url": "https://christopherszatmary.com"
  },
  "repository": "cszatma/config-gen",
  "bugs": {
    "url": "https://github.com/cszatma/config-gen/issues"
  },
  "license": "MIT",
  "main": "build/index.js",
  "bin": {
    "config-gen": "build/index.js"
  },
  "files": [
    "build/"
  ],
  "engines": {
    "node": ">=6"
  },
  "dependencies": {
    "chalk": "^2.4.0",
    "commander": "^2.15.1",
    "fs-extra": "^5.0.0",
    "js-yaml": "^3.11.0",
    "semver": "^5.5.0",
    "stringify-object": "^3.2.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.2",
    "@types/jest": "^22.2.3",
    "@types/js-yaml": "^3.11.1",
    "@types/semver": "^5.5.0",
    "@types/stringify-object": "^3.2.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.4",
    "prettier": "^1.12.1",
    "ts-jest": "^22.4.4",
    "ts-node": "^6.0.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.12.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.8.3"
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json",
    "clean": "rm -rf build/",
    "config-gen": "node build/index.js",
    "lint": "tslint -p ./tsconfig.json --fix",
    "precommit": "lint-staged",
    "prepare": "yarn run clean && yarn run build",
    "test": "jest",
    "test-watch": "jest --watch",
    "watch": "tsc -p ./tsconfig.build.json -w"
  },
  "prettier": {
    "parser": "typescript",
    "trailingComma": "all",
    "singleQuote": true,
    "tabWidth": 4
  },
  "lint-staged": {
    "*.ts": [
      "tslint -p ./tsconfig.json --fix",
      "git add"
    ]
  }
}
